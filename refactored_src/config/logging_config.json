{
  "version": 1,
  "disable_existing_loggers": false,

  "formatters": {
    "simple": {
      "format": "%(levelname)s: %(message)s"
    },
    "detailed": {
      "format": "[%(levelname)s|%(worker_pid)s][%(module)s|L%(lineno)d] %(asctime)s: %(message)s",
      "datefmt": "%Y-%m-%dT%H:%M:%S%z"
    }
  },

  "filters": {
    "username_filter": {
      "()": "config.logging_config.WorkerPIDFilter"
    }
  },

  "handlers": {
    "stderr": {
      "class": "logging.StreamHandler",
      "level": "INFO",
      "formatter": "detailed",
      "stream": "ext://sys.stderr",
      "filters": ["username_filter"]
    },
    "file": {
      "class": "logging.handlers.RotatingFileHandler",
      "level": "WARNING",
      "formatter": "detailed",
      "filename": "logs/detailed_worker.log",
      "maxBytes": 1073741824,
      "backupCount": 5,
      "filters": ["username_filter"]
    }
  },

  "root": {
    "level": "DEBUG",
    "handlers": ["stderr", "file"],
    "formatter": "detailed",
    "filename": "logs/detailed_worker.log"
  }
}